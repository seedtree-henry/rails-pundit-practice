<%= form_for @user do |u| %>
  <div class="form-group">
    <%= u.label :Email %>:
    <%= u.text_field :email, class: "form-control", readonly: true %>
  </div>
  <div class="form-group">
    <%= u.label :Role %>:
    <%= u.text_field :role, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= u.submit class: "btn btn-primary" %>
  </div>
<% end %>
