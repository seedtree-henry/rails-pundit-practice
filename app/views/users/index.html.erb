<div class="row">
   <div class="col-lg-12">
     <h4>Users</h4>
     <div class="panel panel-default">
        <div class="panel-body">
           <div class="table-responsive">
             <table class="table table-hover">
               <thead>
                 <tr>
                   <th class="col-md-1">User email</th>
                   <th class="col-md-1">Role</th>
                   <th class="col-md-1">Edit</th>
                   <th class="col-md-1">Delete</th>
                 </tr>
               </thead>
                 <% @users.each do |u| %>
                   <tr>
                     <td class="col-md-1"> <%= u.email %> </td>
                     <td class="col-md-1"> <%= u.role %> </td>
                     <td class="col-md-1"><%= link_to 'Edit user detail', edit_user_path(u) %></td>
                     <td class="col-md-1"><%= link_to 'Destroy user', user_path(u), method: 'delete', data: {confirm: "Are you sure you want to delete this account?"} %></td>
                   </tr>
                 <% end %>
             </table>
           </div>
         </div>
     </div>
   </div>
</div>
